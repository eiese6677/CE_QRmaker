{
  "manifest_version": 3,
  "name": "QR 공유 확장앱",
  "version": "1.0",
  "description": "현재 페이지의 URL을 QR 코드로 공유할 수 있는 크롬 확장앱입니다.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
